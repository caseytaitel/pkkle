generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id                  Int      @id @default(autoincrement())
  type                String
  timestamp           DateTime @default(now())

  category            String?   

  intention           String?
  secondaryIntention  String?
  emotion             String?
  reflection          String?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}